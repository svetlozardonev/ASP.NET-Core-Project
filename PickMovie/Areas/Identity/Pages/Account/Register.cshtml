@page
@model RegisterModel
@{
    ViewData["Title"] = "Register - ";
}

    <div class="row">
        <div class="col-md-4 mr-auto ml-auto text-center">
            <h1 style="color: darkorange">Register</h1>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 style="color: darkorange">Create a new account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" style="color: darkorange"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="color: darkorange"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword" style="color: darkorange"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning mb-3" style="color: black; background-color: darkorange; border: none;">Register</button>
                <div class="form-group">
                    <p>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color: darkorange">Already have an account? Click here</a>
                    </p>
                </div>
            </form>
        </div>
    
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
