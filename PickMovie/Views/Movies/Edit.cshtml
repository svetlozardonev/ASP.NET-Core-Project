@model AddMovieFormModel

@{
    ViewData["Title"] = "Edit Movie - ";
}

<div class="row">
    <div class="col-sm-12 offset-lg-1 col-lg-8 col-xl-6">
        <h2 class="heading-margin" style="color: darkorange"><strong>Add Movie</strong></h2>
        <form asp-controller="Movies" asp-action="Edit" method="post">
            <div class="form-group d-none" style="color: darkorange">
                <input asp-for="Id" class="form-control">
            </div>
            <div class="form-group" style="color: darkorange">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color: darkorange">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color: darkorange">
                <label asp-for="Director"></label>
                <input asp-for="Director" class="form-control">
                <span asp-validation-for="Director" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color: darkorange">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group" style="color: darkorange">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <button class="btn btn-warning" style="color: black; background-color: darkorange; border: none;" type="submit"><i class="fas fa-save"></i> Save Changes</button>
        </form>
    </div>

</div>
