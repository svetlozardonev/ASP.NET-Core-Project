@model AllMoviesQueryModel


<form method="get">
    <div class="form-group mb-4" style="color: orange" align="center">
        <div class="form-group col-md-4">
            
            <label asp-for="SearchTerm"></label>
            <a>
                <i class="fa fa-search" style="font-size:20px;color:orange">
                </i>
            </a>
            <input class="form-control mb-2" asp-for="SearchTerm" style="width: 50%" placeholder="Type to search..">


        </div>
    </div>
</form>


        
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-3">
                <div class="card mb-3">
                    <img class="card-img-top" src="@movie.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h2 class="card-title">@movie.Title</h2>
                        <h6>@movie.Category</h6>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Director - @movie.Director</li>
                        <li class="list-group-item">Year - @movie.Year</li>
                    </ul>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="mb-2">View More</a>
                </div>

            </div>

        }

    </div>

    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-primary float-left" asp-controller="Movies" asp-action="All" asp-route-currentPage="@Model.CurrentPage - 1">Previous</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary float-right" asp-controller="Movies" asp-action="All" asp-route-currentPage="@Model.CurrentPage + 1">Next</a>
        </div>
    </div>