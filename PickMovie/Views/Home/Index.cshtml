@model IndexViewModel


@{
    var movies = Model.Movies;
    var firstMovie = movies.Any() ? movies[0] : null;
    var secondMovie = movies.Count > 1 ? movies[1] : null;
    var thirdMovie = movies.Count > 2 ? movies[2] : null;

}

@if (!movies.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome in the best movie site for reviews</h1>
        <p class="lead">There are no movies in the system! Please add one!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Movies" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Movie</a>
        </p>
    </div>
}

<div class="text-center" style="color: whitesmoke">
    <h1 class="display-4" style="color: whitesmoke"><Font face="Times New Roman">Welcome</Font></h1>
    <h4><Font face="Arial Black">You can easily choose which movie to watch in our site!</Font></h4>
</div>

<div class="mb-3">

</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/css/posters.jpg" height="600" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/css/Posters1.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/css/top10-copy.jpg" height="600" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5">  

</div>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <h2 class="col-md-4 text-center">
                @Model.TotalMovies Movies
            </h2>
            <h2 class="col-md-4 text-center">
                @Model.TotalUsers Users
            </h2>
        </div>
    </div>
</div>





