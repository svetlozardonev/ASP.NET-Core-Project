@model PickMovie.Views.Home.IndexViewModel
@{
    ViewData["Title"] = "Welcome!";
}

<div class="text-center" style="color: darkorange">
    <h4 class="mb-3" style="font-size:30px"><Font face="Times New Roman">You can easily choose which movie to watch in our site!</Font></h4>
    <p class="mb-1" style="font-size: 29px"><Font face="Times New Roman">We have:</Font></p>
    <ul class="list-inline" style="font-size: 18px;">
        <li class="list-inline-item bg-transparent">Movies: @Model.MoviesCount</li>
        <li class="list-inline-item bg-transparent ml-2">Categories: @Model.CategoriesCount</li>
        <li class="list-inline-item bg-transparent ml-2">Users: @Model.UsersCount</li>
        <li class="list-inline-item bg-transparent ml-2">Comments: @Model.CommentsCount</li>
    </ul>

</div>
<div class="mb-3"></div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/css/top10-copy.jpg" height="600" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/css/Posters1.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/css/lead-teenmovies2018-1515442632.jpg" height="600" alt="Third slide">
        </div>
    </div>
    <div class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" style="cursor: pointer;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </div>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
