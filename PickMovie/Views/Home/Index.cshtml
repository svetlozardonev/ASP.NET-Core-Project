@{
    ViewData["Title"] = "Welcome!";
}

<div class="text-center" style="color: whitesmoke">
    <h1 class="display-4" style="color: whitesmoke"><Font face="Times New Roman">Welcome</Font></h1>
    <h4><Font face="Arial Black">You can easily choose which movie to watch in our site!</Font></h4>
</div>

<div class="mb-3">

</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/css/top10-copy.jpg" height="600" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/css/Posters1.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/css/lead-teenmovies2018-1515442632.jpg" height="600" alt="Third slide">
        </div>
    </div>
    <div class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" style="cursor: pointer;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </div>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>