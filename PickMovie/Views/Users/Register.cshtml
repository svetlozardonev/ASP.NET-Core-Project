@model UserRegisterFormModel

<div class="row">
    <div class="col-md-4 mr-auto ml-auto text-center">
        <h1 style="color: darkorange">Register</h1>
        <form asp-controller="Users" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="color: darkorange">Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" style="color: darkorange"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" style="color: darkorange"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" style="color: darkorange"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" style="color: darkorange"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning mb-3" style="color: black; background-color: darkorange; border: none;">Register</button>
            <div class="form-group">
                <p>
                    <a asp-controller="Users" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" style="color: darkorange">Sign In</a>
                </p>
            </div>
        </form>
    </div>

</div>